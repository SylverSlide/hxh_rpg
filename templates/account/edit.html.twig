{% extends 'layouts/base.html.twig' %}

{% block title %}Edit
{% endblock %}
{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto text-center">
			<h1 class="my-5">Edit</h1>

		{{ form_start(form) }}
			<div class="row">
				<div class="col-md-6">
					{{ form_row(form.firstName) }}
				</div>
				<div class="col-md-6">
					{{ form_row(form.lastName) }}
				</div>
			</div>


			{{ form_rest(form) }}

			<input type="submit" value="Apply changes" class="btn btn-primary btn-lg w-100" formnovalidate>

			{{ form_end(form) }}

		</div>
	</div>
{% endblock %}
