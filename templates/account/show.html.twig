{% extends 'layouts/base.html.twig' %}

{% block title %}Profile
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto text-center">
			<h1 class="my-5">Profile</h1>


			<img id="avatar_image" class="rounded-circle shadow" src="{{ asset('build/images/bean.png')}}" alt="{{ app.user.fullName }}'s Avatar">

			<p class="mt-5 lead">
				{{ app.user.email }}
			</p>

			<h2>{{ app.user.fullName }}</h2>
			
			<p><small>Account created on {{ app.user.createdAt|date('d/m/Y') }}</small></p>

			<p>
				<a href="{{ path('app_account_edit') }}">
					Edit Account
				</a>
				|
				<a href="#">Change password</a>
			</p>

			{% if app.user.isVerified %}
				<h2 class="h5 mt-3 text-success ">
					Votre compte est vérifié <i class="fas fa-check"></i></h2>
			{% else %}
				<p class="mt-3 text-center">Votre compte n'est pas vérifié , cliquer pour renvoyer un lien de confirmation sur votre adresse mail :
					<strong>{{ app.user.getEmail }}</strong>
				</p>
				<a id="confirmation_mail" class="mb-5 btn btn-primary" href="{{ path('app_reverify_email') }}">Renvoyer un lien de confirmation</a>
			{% endif %}
		</div>
	</div>


{% endblock %}
