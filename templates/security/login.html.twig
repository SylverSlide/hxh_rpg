{% extends 'layouts/base.html.twig' %}

{% block title %}Log in!
{% endblock %}

{% block body %}
	<div class="row">
		<div class="col-md-6 mx-auto">
			<form method="post">
				<h1 class="text-center mt-5 mb-3">Please sign in</h1>
				<p class="mb-5 text-center text-muted">
					Your pins are waiting you.
				</p>

				{% if error %}
					<div role="alert" class="alert alert-error rounded mb-3">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
				{% endif %}

				<div class="form-group">
					<label for="email">Email</label>
					<input type="email" value="{{ last_username }}" name="email" id="email" class="form-control" autocomplete="email" required autofocus>
				</div>

				<div class="form-group">
					<label for="password">Password</label>
					<input type="password" name="password" id="password" class="form-control" autocomplete="current-password" required>
				</div>

				<div class="d-flex justify-content-between">

					<div class="form-check mt-3">
					<label class="form-check-label" for="remember_me">
						Se souvenir de moi
					</label>
					<input class="form-check-input" type="checkbox" id="_remember_me" name="_remember_me">
					</div>
				
				<a class="mt-3" href="#">Forgot password?</a>

				</div>
				<input
				type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

				{#
													        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
													        See https://symfony.com/doc/current/security/remember_me.html
													
													        <div class="checkbox mb-3">
													            <label>
													                <input type="checkbox" name="_remember_me"> Remember me
													            </label>
													        </div>
													    #}

				<button class="btn btn-lg btn-primary mt-3 w-100" type="submit">
					Sign in
				</button>

				<p class="mt-5 mb-3 text-center text-muted">Not registered yet ? <a href="#">Create an account</a></p>
			</form>
		</div>
	</div>
{% endblock %}
